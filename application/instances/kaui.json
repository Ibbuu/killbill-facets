{
    "$schema": "https://docs.facets.cloud/schemas/application/instances/application.schema",
    "kind": "facets.modules.common.application",
    "disabled": false,
    "apiVersion": "v2",
    "metadata": {
    },
    "spec": {
      "env": {
        "KAUI_CONFIG_DAO_PASSWORD": {
          "type": "static",
          "default": "killbill"
        },
        "KAUI_CONFIG_DAO_URL": {
          "type": "static",
          "default": "jdbc:mysql://db:3306/kaui"
        },
        "KAUI_CONFIG_DAO_USER": {
          "type": "static",
          "default": "root"
        },
        "KAUI_KILLBILL_URL": {
            "type": "static",
            "default": "http://killbill:8080"
        }
      },
      "loadbalancing": {
        "rules": [
          {
            "ingress": "ingress",
            "path": "/",
            "portName": "port8080"
          }
        ]
      },
      "release": {
        "strategy": "RollingUpdate",
        "build": {
          "image": "313496281593.dkr.ecr.us-east-1.amazonaws.com/facets/kb-facets/kaui:2.0.9"
        }
      },
      "runtime": {
        "size": {
          "value": "small",
          "namespace": "GP"
        },
        "autoscaling": {
          "cpuThreshold": "50",
          "max": 1,
          "min": 1
        },
        "ports": [
          {
            "name": "port8080",
            "port": 8080
          }
        ]
      }
    }
  }
  